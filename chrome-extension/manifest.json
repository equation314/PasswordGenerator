{
  "name": "Password Generator",
  "description": "A secure password generator based on HMAC-SHA3.",
  "version": "1.0",
  "manifest_version": 2,
  "offline_enabled": true,
  "author": "Yuekai Jia",
  "background": {
    "page": "popup.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/img/icon-16x16.png",
      "128": "assets/img/icon-128x128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": ["clipboardWrite"],
  "icons": {
    "16": "assets/img/icon-16x16.png",
    "128": "assets/img/icon-128x128.png"
  }
}
